.container {
  width: 90%;
  margin: 0 auto;
  padding-top: 20px;
  border-bottom: 0.5rpx solid rgb(226, 226, 226);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.photo{
  width: 100%;
  height: 50vw;
}

.user-info{
  display: flex;
  align-items: center;
}

.footer {
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-top: 5px;
  align-items: center;
  padding: 10px 0;
  justify-content: space-between;
}

.user-head {
  padding: 0 10px;
}

.user-name,
.time {
  font-size: small;
  margin-right: 5px;
}
.time{
  color: rgb(182, 182, 182);
}
.container {
  display: flex;
  flex-direction: column;
  padding: 10px;
  margin: 10px 10px 0px 10px;
  border: 0.5rpx solid rgb(223, 220, 220);
  border-radius: 5px;
}

.header {
  display: flex;
}

.image {
  margin: 10px;
}

.introduction {
  width: 70%;
  height: 70px;
  margin-top: 10px;
  display: -webkit-box;
  text-overflow:ellipsis; 
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
  font-size: small;
}

.footer {
  display: flex;
  font-size: small;
  color: rgb(187, 186, 186);
}

.time {
  margin: 0 10px;
}
.whiteBox{
  width: 100%;
  height: 10px;
}